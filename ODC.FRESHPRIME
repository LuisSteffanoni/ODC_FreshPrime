   <script>
    function updateTotal() {
    let total = 0;
    const rows = document.querySelectorAll('#product-table tbody tr');
    const resumenTbody = document.getElementById('resumen-tbody');
    resumenTbody.innerHTML = ''; // Clear the resumen table

    rows.forEach(row => {
        const quantityInput = row.querySelector('input[type="number"]');
        
        // Change from parseInt to parseFloat to handle decimals
        let quantity = parseFloat(quantityInput.value) || 0;

        // Prevent negative values
        if (quantity < 0) {
            quantity = 0;
            quantityInput.value = 0; // Reset the input to 0 if negative
        }

        // Get the price and remove '$' symbol
        const price = parseFloat(row.querySelector('.price').innerText.replace('$', '').replace(',', '')) || 0;

        // Calculate total for the item (quantity * price)
        const itemTotal = price * quantity;

        // Update the total for this row in the '.item-total' column
        row.querySelector('.item-total').innerText = `$${itemTotal.toFixed(2)}`;

        // Capture the notes for the current row
        const notes = row.querySelector('input[type="text"]').value;

        // If quantity is greater than 0, add it to the "resumen" section
        if (quantity > 0) {
            const newRow = resumenTbody.insertRow();
            newRow.innerHTML = `
                <td>${row.cells[1].innerText}</td> <!-- Item name -->
                <td>${quantity}</td> <!-- Quantity -->
                <td>${row.cells[4].innerText}</td> <!-- Unit price -->
                <td>$${itemTotal.toFixed(2)}</td> <!-- Total price -->
                <td>${notes || 'Sin notas'}</td> <!-- Notes -->
            `;
        }

        // Accumulate total for all rows
        total += itemTotal;
    });

    // Update the total amount in the UI
    document.getElementById('total-amount').innerText = total.toFixed(2);
    document.getElementById('resumen-total-amount').innerText = total.toFixed(2);

    // Update the button state after calculating the total
    toggleBuyButton();
}




    function toggleBuyButton() {
        const checkbox = document.getElementById('confirm-checkbox');
        const buyButton = document.getElementById('buy-button');
        buyButton.disabled = !checkbox.checked; // Enable button if checkbox is checked
    }

    function filterTable() {
        const filter = document.getElementById("class-filter").value;
        const rows = document.querySelectorAll('#product-table tbody tr');

        rows.forEach(row => {
            const rowClass = row.getAttribute("data-class");
            if (filter === "All" || rowClass === filter) {
                row.style.display = ""; // Show row
            } else {
                row.style.display = "none"; // Hide row
            }
        });
    }

    function submitOrder() {
        const checkbox = document.getElementById('confirm-checkbox');
        if (checkbox.checked) {
            alert('Orden enviada exitosamente!');
            // Implement the order submission logic here
        } else {
            alert('Por favor, confirme que los datos son correctos antes de enviar la orden.');
        }
    }
</script>



