    <style>
        body { 
            font-family: Arial, sans-serif; 
            background-color: #f4f4f4; 
            margin: 0; 
            padding: 20px;
        }
        .letterhead {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid #333;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        .letterhead img {
            max-width: 200px; /* Adjust width of the logo */
        }
        .letterhead h2 {
            margin: 0;
            color: #4CAF50;
            text-align: center;
            width: 100%;
        }
        .letterhead address {
            font-size: 14px;
            color: #333;
            text-align: right;
        }
        h1 { 
            text-align: center; 
            color: #333; 
            margin-bottom: 20px;
        }
        table { 
            width: 90%; 
            margin: 20px auto; 
            border-collapse: collapse; 
            background-color: #fff;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.1);
        }
        th, td {
            padding: 12px 20px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        tr:hover { background-color: #f1f1f1; }
        .button {
            text-align: center;
            padding: 20px;
        }
        .buy-button {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            margin-top: 20px;
        }
        .buy-button:hover {
            background-color: #45a049;
        }
        .print-button {
            padding: 10px 20px;
            background-color: #f44336;
            color: white;
            border: none;
            cursor: pointer;
        }
        .print-button:hover {
            background-color: #d32f2f;
        }

        /* Ensure green bar shows in print */
        @media print {
            th {
                background-color: #4CAF50 !important;
                color: white;
            }
        }

        /* Footer styling */
        footer {
            text-align: center;
            padding: 10px;
            background-color: #333;
            color: white;
            margin-top: 40px;
        }

        .total-section {
            text-align: right;
            font-weight: bold;
            font-size: 18px;
            margin-right: 10%;
            margin-top: 20px;
        }
        
        /* Resumen section styling */
        .resumen {
            margin-top: 40px;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.1);
        }

        .resumen h2 {
            text-align: center;
            color: #4CAF50;
        }
    </style>
</head>
